<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Ccc_Vendor>
			<version>1.0.0</version>
		</Ccc_Vendor>
	</modules>

	<admin>
		<routers>
			<vendor>
				<use>admin</use>
				<args>
					<module>Ccc_Vendor</module>
                    <frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
	</admin>

	<adminhtml>
		<menu>
	        <vendor translate="title" module="vendor">
	            <title>Vendor</title>
	            <sort_order>40</sort_order>
	            <!-- action>adminhtml/vendor/</action -->
	            <children>
	                <manage translate="title" module="vendor">
	                    <title>Manage Vendors</title>
	                    <action>vendor/adminhtml_vendor/</action>
	                    <sort_order>0</sort_order>
	                </manage>
	            </children>
	         </vendor>
	     </menu>

	     <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
	</adminhtml>

	<global>
		<helpers>
            <vendor>
                <class>Ccc_Vendor_Helper</class>
            </vendor>
        </helpers>

        <blocks>
        	<vendor>
        		<class>Ccc_Vendor_Block</class>
        	</vendor>
        </blocks>

        <models>
        	<vendor>
                <class>Ccc_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>Ccc_Vendor_Model_Resource</class>
                <deprecatedNode>vendor_mysql</deprecatedNode>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>
                </entities>
            </vendor_resource>
        </models>

        <resources>
            <vendor_setup>
                <setup>
        	        <module>Ccc_Vendor</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vendor_setup>
            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>
            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
        </resources>
    </global>
</config>